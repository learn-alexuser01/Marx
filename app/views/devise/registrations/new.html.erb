<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'pure-form pure-form-stacked'}) do |f| %>
  <fieldset>
    <legend>Sign up</legend>
    <%= f.error_notification %>

    <%= f.label :name %>
    <%= f.text_field :name, :required => true, :autofocus => true, placeholder: 'Name' %>
    <%= f.label :email %>
    <%= f.email_field :email, :required => true, :autofocus => true, placeholder: 'Email' %>
    <%= f.label :password %>
    <%= f.text_field :password, :required => true, placeholder: 'Password' %>
    <%= f.text_field :password_confirmation, :required => true, placeholder: 'Confirm Password' %>

    <%= f.button :submit, "Sign up", class: 'pure-button pure-button-primary' %>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
