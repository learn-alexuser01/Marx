= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'pure-form pure-form-stacked'}) do |f|
  .login-box-2
    %span{style:"text-align:center;"}
      %h2{style:"margin: 5px 0px;"} Edit #{resource_name.to_s.humanize}
    %hr{style:"margin-bottom: 10px; border: 0; border-bottom: 1px solid #fff;"}
    = f.error_notification
    = f.label :name
    = f.text_field :name, :required => true, :autofocus => true, placeholder: 'Name'
    = f.label :email
    = f.email_field :email, :required => true, placeholder: 'Email'
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %p
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    = f.label :password, "Change Password"
    = f.text_field :password, :type=> "password", :autocomplete => "off", :required => false, placeholder: 'Password'
    = f.text_field :password_confirmation, :type=> "password", :required => false, placeholder: 'Password confirmation'
    = f.label :current_password, "Current Password"
    = f.text_field :current_password, :type=> "password", :hint => "", :required => true, placeholder: 'Current password'
    .edit-button-center
      %br
      .span{:style => "margin-top: 0px;"}
        = f.button :submit, "Update", class: 'pure-button pure-button-primary', style:"margin-top: -1px;"
        = link_to "Delete Account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'pure-button pure-button-error', style:"margin-left: 2px; margin-top: 1px;"
      .span{:style => "margin-top: 5px;"}
        = link_to "Back", :back, class: 'pure-button pure-button-warning'

:scss 
  .login-box-2 {
    background-color: #2B2F2D;
    width: 300px;
    height: 450px;
    margin: 10px auto;
    border-bottom: 1px solid #141113;
    padding: 20px;
      -webkit-border-radius: 4px;
      -moz-border-radius: 4px;
      border-radius: 4px;
    color: #fff;

    .edit-button-center {
      text-align: center; 
      margin: 0px auto;
    }

    textarea:focus, input:focus{
      outline: 0;
    }

    h2 {
      font-family: 'Lato';
      font-weight: 700;
      color: #fff;
    }

   

    a, p {
      color: #fff;
      font-family: 'Lato';
    }

  }