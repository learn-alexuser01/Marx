
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'pure-form pure-form-stacked'}) do |f| %>
  <legend>Sign in</legend>
  <fieldset>
    <%= f.label :email%>
    <%= f.email_field :email, :required => false, :autofocus => true, placeholder: 'Email' %>
    <%= f.label :password %>
    <%= f.text_field :password, :required => false, placeholder: 'Password' %>
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>

    <%= f.button :submit, "Sign in" %>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
